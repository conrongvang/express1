<%- include('../layouts/common') -%>

<div class="container pt-5">
    <h1 style="margin-left: 400px; margin-bottom: 50px;">Login</h1>
    <%  if(errors) {
            errors.forEach(function(error) { %>
                <a style="margin-left: 400px; color: red"><%=error%><br></a>
    <%      });
        errors.splice(0,3);
        }
    %>
    <div class="d-flex justify-content-center">
        <form class="form-group" action="/auth/login" method="POST">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="name">Username</label>
                <div class="col-sm-10">
                    <input id="name" class="form-control" name="username" type="text" autocomplete="off" value="<%=values.username%>"/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="phone">Password</label>
                <div class="col-sm-10">
                    <input id="phone" class="form-control" name="password" type="password>" autocomplete="off"/>
                </div>
            </div>
            <button style="margin-left: 400px" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>