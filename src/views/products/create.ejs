<%- include('../layouts/common') -%>

<div class="container pt-5">
    <h1 style="margin-left: 400px; margin-bottom: 50px;">Create product</h1>
    <%  if(errors) {
            errors.forEach(function(error) { %>
                <a style="margin-left: 400px; color: red"><%=error%><br></a>
    <%      });
        errors.splice(0,3);
        }
    %>
    <div class="d-flex justify-content-center">
        <form class="form-group" action="/products/create" method="POST">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="name">Name</label>
                <div class="col-sm-10">
                    <input id="name" class="form-control" name="name" type="text" value="<%=values.name%>" autocomplete="off"/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="image">Image</label>
                <div class="col-sm-10">
                    <input id="image" class="form-control" name="image" type="text" value="<%=values.image%>" autocomplete="off"/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="description">Description</label>
                <div class="col-sm-10">
                    <input id="description" class="form-control" name="description" type="text" value="<%=values.description%>" autocomplete="off"/>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" for="price">Price</label>
                <div class="col-sm-10">
                    <input id="price" class="form-control" name="price" type="text" value="<%=values.price%>" autocomplete="off"/>
                </div>
            </div>
            <button style="margin-left: 400px" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>